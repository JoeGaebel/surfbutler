{
  "extends": "eslint:recommended",
  "rules": {
    "semi": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "template-curly-spacing": ["error", "always"],
    "quotes": ["error", "single"],
    "no-console": ["off", "always"],
    "prefer-const": ["error"],
    "prefer-arrow-callback": ["error"]
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },

  "env": {
    "es6": true,
    "node": true,
    "jest": true
  }
}
